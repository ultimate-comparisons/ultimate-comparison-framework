{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
      "lib": [
          "es2017",
          "dom"
      ],
    "types": ["node", "showdown", "jquery"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "www",
    "lib"
  ]
}
